{% import "../_partials/_components.njk" as components %}

{% extends "./base.njk" %}

{% block main %}
    {{ components.banner(title=title) }}

    <ul>
        {% for item in collections[iterator] %}
            <li class="columns columns--contained">
                <a href="{{ item.page.url }}">
                    <strong class="title title--danger">
                        {{ item.data.title }}
                    </strong>

                    <p>
                        {{ item.data.description }}
                    </p>
                </a>
            </li>
        {% endfor %}
    </ul>

    {% block content %}

    {% endblock content %}
{% endblock main %}